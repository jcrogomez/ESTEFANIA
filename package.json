{
  "name": "smaker",
  "version": "0.1.0",
  "description": "User interface to handle the Solution Maker by Ecolistico",
  "author": "Ecolistico",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^5.3.3",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "csv-parse": "^5.4.0",
    "csv-stringify": "^6.4.0",
    "electron-is-dev": "^2.0.0",
    "parse": "^4.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "react-scripts": "5.0.1",
    "react-use": "^17.4.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start-electron": "nodemon --watch ./public/electron.js --watch ./public/preload.js --exec \"electron .\"",
    "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && npm run start-electron\"",
    "pack-app": "npm run build && electron-builder --dir",
    "pack-build": "electron-builder --dir",
    "build-electron": "npm run build && electron-builder",
    "package": "electron-builder build --win -c.extraMetadata.main=build/electron.js --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0",
    "nodemon": "^3.0.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "123456789",
    "productName": "SMaker",
    "copyright": "Test",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [],
    "win": {
      "icon": "./build/logo512.png",
      "target": [
        "7z"
      ]
    },
    "linux": {
      "target": {
        "target": "appimage",
        "arch": [
          "armv7l"
        ]
      }
    }
  }
}
